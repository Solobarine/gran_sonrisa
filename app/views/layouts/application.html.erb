          <div id="themeBtn">
          </div>
          <% if current_user %>
            <% if current_user.avatar.representable? %>
              <%= image_tag current_user.avatar, alt: current_user.first_name %>
            <% else %>
              <%= link_to current_user.first_name[0], profile_path, id: 'user_logo' %>
            <% end %>
            <%= link_to 'Cars', cars_path %>
            <%= button_to 'Logout', destroy_user_session_path, method: :delete %>
