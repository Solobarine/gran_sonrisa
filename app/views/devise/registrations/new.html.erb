<div class="register_page">
  <div>
    <h2>Sign up</h2>
    <hr>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :first_name %>
        <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
        <%= render 'devise/shared/errors', errors: resource.errors['first_name'] %>
      </div>
      <div class="field">
        <%= f.label :last_name %>
        <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
        <%= render 'devise/shared/errors', errors: resource.errors['last_name'] %>
      </div>
      <div class="field">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        <%= render 'devise/shared/errors', errors: resource.errors['email'] %>
      </div>
      <div class="field">
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: "new-password" %>
        <%= render 'devise/shared/errors', errors: resource.errors['password'] %>
      </div>
      <div class="field">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        <%= render 'devise/shared/errors', errors: resource.errors['password_confirmation'] %>
      </div>
      <div class="actions">
        <%= f.submit "Sign up" %>
      </div>
    <% end %>
    <hr>
    <div id="other_links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
