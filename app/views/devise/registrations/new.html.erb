<div class="register_page">
  <div>
    <h3>Hello There</h3>
    <small>Create an Account</small>
    <hr>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="field">
        <div>
          <i class="fa-solid fa-user-large"></i>
          <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", placeholder: 'First Name' %>
        </div>
        <%= render 'devise/shared/errors', errors: resource.errors['first_name'] %>
      </div>
      <div class="field">
        <div>
          <i class="fa-solid fa-user-large"></i>
          <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", placeholder: 'Last Name' %>
        </div>
        <%= render 'devise/shared/errors', errors: resource.errors['last_name'] %>
      </div>
      <div class="field">
        <div>
          <i class="fa-solid fa-envelope"></i>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email' %>
        </div>
        <%= render 'devise/shared/errors', errors: resource.errors['email'] %>
      </div>
      <div class="field">
        <div>
          <i class="fa-solid fa-lock"></i>
          <%= f.password_field :password, autocomplete: "new-password", placeholder: 'Password' %>
        </div>
        <%= render 'devise/shared/errors', errors: resource.errors['password'] %>
      </div>
      <div class="field">
        <div>
          <i class="fa-solid fa-lock"></i>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'Password Confirmation' %>
        </div>
        <%= render 'devise/shared/errors', errors: resource.errors['password_confirmation'] %>
      </div>
      <div class="actions">
        <%= f.submit "Register" %>
      </div>
    <% end %>
    <hr>
    <div class="other_links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
