<% content_for :dashboard_content do %>
  <div id="content">
    <div id="new_car">
      <h1>New Car</h1>
      <%= form_with model: @car, id: 'new_car_form' do |f| %>
        <div class='field'>
          <%= f.label 'Manufacturer'%>
          <div>
            <i class="fa-solid fa-industry"></i>
            <select name="manufacturer_id">
              <option value="">Select Manufacturer</option>
              <% @manufacturers.each do |manufacturer| %>
                <option value="<%= manufacturer.id%>"><%= manufacturer.name %></option>
              <% end %>
            </select>
          </div>
        </div>
        <div class='field'>
          <%= f.label 'Car Model'%>
          <div>
            <i class="fa-solid fa-car"></i>
            <%= f.text_field :model, placeholder: 'Car Model...' %>
          </div>
        </div>
        <div class='field'>
          <%= f.label 'Condition'%>
          <div>
            <i class="fa-solid fa-circle-half-stroke"></i>
            <select name="condition">
              <option value="">Select Car Condition</option>
              <option value="new">Brand New</option>
              <option value="used">Used</option>
            </select>
          </div>
        </div>
        <div class='field'>
          <%= f.label 'Body Style'%>
          <div>
            <i class="fa-solid fa-car-side"></i>
            <%= f.text_field :body_style, placeholder: 'e.g Sportcar' %>
          </div>
        </div>
        <div class='field'>
          <%= f.label 'Fuel Type'%>
          <div>
            <i class="fa-solid fa-gas-pump"></i>
            <%= f.text_field :fuel_type, placeholder: 'e.g Electric' %>
          </div>
        </div>
        <div class='field'>
          <%= f.label 'Engine'%>
          <div>
            <i class="fa-solid fa-sliders"></i>
            <%= f.text_field :engine, placeholder: 'e.g 240kW' %>
          </div>
        </div>
        <div class='field'>
          <%= f.label 'Transmission'%>
          <div>
            <i class="fa-solid fa-gear"></i>
            <%= f.text_field :transmission, placeholder: 'e.g Manual' %>
          </div>
        </div>
        <div class='field'>
          <%= f.label 'Drive'%>
          <div>
            <i class="fa-solid fa-gears"></i>
            <%= f.text_field :drive_train, placeholder: 'e.g 4WD' %>
          </div>
        </div>
        <div class='field'>
          <%= f.label 'Car Mileage'%>
          <div>
            <i class="fa-solid fa-road"></i>
            <%= f.number_field :mileage, placeholder: 'e.g 130' %>
          </div>
        </div>
        <div class='field'>
          <%= f.label 'Car Color'%>
          <div>
            <i class="fa-solid fa-brush"></i>
            <%= f.text_field :color, placeholder: 'e.g Green' %>
          </div>
        </div>
        <div class='field'>
          <%= f.label 'Year Released'%>
          <div>
            <i class="fa-solid fa-calendar"></i>
            <%= f.number_field :year, placeholder: 'e.g 2021' %>
          </div>
        </div>
        <div class='field'>
          <%= f.label 'Price'%>
          <div>
            <i class="fa-solid fa-tags"></i>
            <%= f.number_field :price, placeholder: 'e.g 50000' %>
          </div>
        </div>
        <div class='field'>
          <%= f.label :images %>
          <div>
            <i class="fa-solid fa-images"></i>
            <%= f.file_field :images, multiple: true %>
          </div>
        </div>
        <div id="description">
          <%= f.label 'Enter Description' %>
          <%= f.text_area :description, placeholder: 'Description', size: '30x10' %>
        </div>
        <button type="submit">Add Car</button>
      <% end %>
    </div>
  </div>
<% end %>
<%= render template: "layouts/dashboard"%>
