        <div class="car_feature">
          <i class="fa-solid fa-gears"></i>
          <small>Drive</small>
          <p><%= @car.drive_train %></p>
        </div>
        <div class="car_feature">
          <i class="fa-solid fa-road"></i>
          <small>Mileage</small>
          <p><%= @car.mileage %></p>
        </div>
      </div>
